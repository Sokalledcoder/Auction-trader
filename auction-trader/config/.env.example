# Auction Trader - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# BYBIT API CREDENTIALS
# =============================================================================
# Get these from: https://www.bybit.com/app/user/api-management
# Required permissions: Read, Trade (for live trading)

BYBIT_API_KEY=your_api_key_here
BYBIT_API_SECRET=your_api_secret_here

# Use testnet for paper trading (recommended for initial testing)
# Set to "true" for testnet, "false" for mainnet
BYBIT_TESTNET=true

# =============================================================================
# TRADING MODE
# =============================================================================
# Available modes:
#   - paper: Simulated trading with real market data (no real orders)
#   - live: Real trading with real money (use with caution!)
#   - shadow: Track what would happen without executing
#   - backtest: Historical simulation

TRADING_MODE=paper

# =============================================================================
# DATABASE PATHS
# =============================================================================
# Override default paths from config/default.yaml if needed
# Leave commented to use defaults

# DATA_DIR=./data
# RAW_DB=raw.duckdb
# FEATURES_DB=features.duckdb
# SIGNALS_DB=signals.db
# EXECUTION_DB=execution.db

# =============================================================================
# LOGGING
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log to file (in addition to console)
LOG_FILE=./logs/auction_trader.log

# =============================================================================
# ALERTS (OPTIONAL)
# =============================================================================
# Telegram alerts for trade notifications
# Get bot token from @BotFather, chat_id from @userinfobot

# TELEGRAM_BOT_TOKEN=your_bot_token_here
# TELEGRAM_CHAT_ID=your_chat_id_here

# Discord webhook for alerts
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# =============================================================================
# DASHBOARD
# =============================================================================
# Port for the web dashboard
DASHBOARD_PORT=8080

# Host to bind to (0.0.0.0 for all interfaces)
DASHBOARD_HOST=127.0.0.1

# =============================================================================
# ADVANCED
# =============================================================================
# Override config file path
# CONFIG_PATH=./config/custom.yaml

# Enable debug mode (verbose logging, additional checks)
# DEBUG=false

# Rust worker threads (0 = auto, uses CPU_CORES / 2)
# RUST_WORKERS=0
